<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragments.aftermarket.ConstructionFragment">

    <LinearLayout
        android:id="@+id/layParentConstruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="@string/new_construction_progress"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:gravity="center_horizontal"
            tools:text="Su propiedad presenta un avance del 90% de construcciÃ³n." />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="2">

            <include
                android:id="@+id/circularProgress"
                layout="@layout/circular_progress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.55" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.45"
                android:orientation="vertical"
                android:paddingStart="5dp"
                android:paddingTop="10dp"
                tools:ignore="RtlSymmetry">

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:text="@string/new_construction_deadline"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_round_corner_gray_fill"
                    android:clickable="false"
                    android:ems="10"
                    android:enabled="false"
                    android:inputType="textPersonName"
                    android:lines="1"
                    android:maxLines="1"
                    android:textSize="16sp"
                    tools:ignore="Autofill,LabelFor,TextFields" />

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="@string/new_construction_changes"
                    android:textSize="10sp"
                    tools:ignore="SmallSp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/textView23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="@string/new_construction_extra_info"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/etInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/rectangle_round_corner_gray_fill"
            android:clickable="false"
            android:ems="10"
            android:enabled="false"
            android:gravity="top|start"
            android:inputType="textMultiLine"
            android:lines="2"
            android:maxLines="2"
            android:textSize="16sp"
            tools:ignore="Autofill,LabelFor" />

        <com.synnapps.carouselview.CarouselView
            android:id="@+id/photosViewer"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            app:autoPlay="false"
            app:fillColor="@color/colorGreen"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:pageColor="#00000000"
            app:radius="3dp"
            app:slideInterval="5000"
            app:strokeColor="@android:color/white"
            app:strokeWidth="0.5dp" />
    </LinearLayout>

</androidx.core.widget.NestedScrollView>