<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".SplashScreenActivity">

    <LinearLayout
        android:id="@+id/layTop"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/colorDarkGray"
        android:orientation="vertical"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/layTop"
        android:background="@color/colorAccent"
        android:orientation="vertical"></LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/imgCenter"
        android:layout_marginBottom="10dp"
        android:text="@string/crecento_group"
        android:textAlignment="center"
        android:textColor="@color/colorDarkGray"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/imgCenter"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/logo_ocean_bs" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/layBottom2"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sistema de Información POSTVenta"
            android:textAlignment="textEnd"
            android:textColor="@color/colorBlack"
            android:textSize="18sp" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="@color/colorBlack" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ocean business Software | México"
            android:textAlignment="textEnd"
            android:textColor="@color/colorBlack" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layBottom2"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_above="@id/layBottom"
        android:background="@color/colorAccent"
        android:orientation="vertical"></LinearLayout>

    <LinearLayout
        android:id="@+id/layBottom"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorDarkGray"
        android:orientation="vertical"></LinearLayout>
</RelativeLayout>