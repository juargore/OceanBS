<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    app:cardMaxElevation="4dp">

    <LinearLayout
        android:id="@+id/layParentPop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp">

        <TextView
            android:id="@+id/textView44"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="BitÃ¡cora de Status de Incidencia"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/view7"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorBlack" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvBitacoraStatusIncidencia"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btnAddPopIncidencias"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/rectangle_blue_button"
            android:drawableLeft="@drawable/ic_add_small"
            android:drawablePadding="-15dp"
            android:paddingLeft="15dp"
            android:paddingTop="-4dp"
            android:text="Incidencia"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnAddPopStatusIncidencias"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/rectangle_blue_button"
            android:drawableLeft="@drawable/ic_add_small"
            android:drawablePadding="-15dp"
            android:paddingLeft="15dp"
            android:paddingTop="-4dp"
            android:text="Status de Incidencia"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/txtCancelP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Terminar"
            android:textAlignment="center"
            android:textColor="@color/colorAccent" />
    </LinearLayout>
</androidx.cardview.widget.CardView>